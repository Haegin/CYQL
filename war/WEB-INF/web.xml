<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>in.haeg.cyql.server.LogIn</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>in.haeg.cyql.server.Register</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>addQuestion</servlet-name>
    <servlet-class>in.haeg.cyql.server.AddQuestion</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>addQuestion</servlet-name>
    <url-pattern>/ask</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>magic</servlet-name>
    <servlet-class>in.haeg.cyql.server.Magic</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>magic</servlet-name>
    <url-pattern>/magic</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
